@model TourAgency.Web.Models.TypeOfHotelViewModel

@{
    ViewBag.Title = "AddHotel";
}
<div class="container">
    <br />
    <br />
    <div class="card">
        <div class="card-header">
            Add Hotel
        </div>

        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NumberOfStars, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NumberOfStars, new { htmlAttributes = new { @class = "form-control numInput" } })
                        @Html.ValidationMessageFor(model => model.NumberOfStars, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary mr-3 ml-3 mb-3 mt-3" })
        </div>
    </div>
</div>

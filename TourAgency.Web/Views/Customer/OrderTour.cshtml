@model TourAgency.Web.Models.TourViewModel

@{
    ViewBag.Title = "Order Tour";
}

<h2>Order Tour</h2>
<div class="card-body">
    <div class="col-sm-6 mx-auto">
        <div class="card">
            <h4 class="text-center">Update Info Tour</h4>
            <div class="card-body">
                @using (Html.BeginForm("OrderTour", "Customer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id, htmlAttributes: new { @name = "id" })
                    <b>Type of tour:</b>
                    @Html.DisplayFor(model => model.TypeOfTour.Type)
                    <br />
                    <b>Type of hotel:</b>
                    @Html.DisplayFor(model => model.TypeOfHotel.Type)
                    <br />
                    <b>Max number of people:</b>
                    @Html.DisplayFor(model => model.MaxNumberOfPeople)
                    <br />
                    <b>Price:</b>
                    @Html.DisplayFor(model => model.Price)
                    <br />
                    <span class="text-danger font-weight-bold">Price for you: @ViewBag.PriceForCustomer</span>
                    <br />
                    <b>City:</b>
                    @Html.DisplayFor(model => model.City.NameCity)
                    <br />
                    <b>Tour start date:</b>
                    @Html.DisplayFor(model => model.StartOfTour)
                    <b>Tour end date:</b>
                    @Html.DisplayFor(model => model.EndOfTour)
                    <br />
                    <b>Real number of people:</b>
                    <input name="realNumberOfPeople" type="number" min="1" max="15" maxlength="3" autocomplete="off" class="form-control numInput">
                    @Html.ValidationMessageFor(model => model.MaxNumberOfPeople, "", new { @class = "text-danger" })
                    <br />
                    <input type="submit" class="btn btn-success w-50" value="Buy" />
                    <br />
                    <br />
                    @Html.ActionLink(linkText: "Back", actionName: "Index", controllerName: "Customer", htmlAttributes: new { @class = "btn btn-primary w-50" }, routeValues: null)
                }
            </div>
        </div>
    </div>
</div>
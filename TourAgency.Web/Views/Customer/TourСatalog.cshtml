@model TourAgency.Web.Models.Paginations.TourPaginViewModel
@using TourAgency.Web.Helpers
@{
    ViewBag.Title = "TourСatalog";
}


<div style="position: fixed; width: 18rem; height: auto;">
    <br />
    <br />
    <div class="border rounded mr-3 ml-3 mb-3 mt-3" style="width: 18rem;">
        @using (Html.BeginForm("TourСatalog", "Customer", FormMethod.Post, htmlAttributes: new { @id = "Form" }))
        {
            <select name="sortType" class="form-control" onchange="document.getElementById('Form').submit();">
                <option value="" hidden>Choice</option>
                <option value="1">From smaller to larger</option>
                <option value="2">From larger to smaller</option>
            </select>
            <br />
            @Html.RadioButton("sort", 1, true, htmlAttributes: new { @onchange = "document.getElementById('Form').submit();" })
            <p>Price</p>
            <br />
            @Html.RadioButton("sort", 2, htmlAttributes: new { @onchange = "document.getElementById('Form').submit();" })
            <p>Type of tour</p>
            <br />
            @Html.RadioButton("sort", 3, htmlAttributes: new { @onchange = "document.getElementById('Form').submit();" })
            <p>Max numder of people</p>
            <br />
            @Html.RadioButton("sort", 4, htmlAttributes: new { @onchange = "document.getElementById('Form').submit();" })
            <p>Hotel stars</p>
            <br />
            @Html.RadioButton("sort", 5, htmlAttributes: new { @onchange = "document.getElementById('Form').submit();" })
            <p>Start of tour</p>
        }
    </div>
</div>
<div class="container-fluid" style="padding-left:300px; margin:0; position: static; width: 100%;">
    <br />
    <br />
    <h2 class="text-center">All tours</h2>
    @using (Html.BeginForm("OrderTour", "Customer", FormMethod.Post))
    {
        <div class="container-fluid d-flex flex-wrap">
            @foreach (var item in Model.Tours)
            {
                <div class="card mr-3 ml-3 mb-3 mt-3" style="width: 18rem;">
                    <div class="card-body">
                        <p>Price: @item.Price</p>
                        <br />
                        <p>NumberOfOrders: @item.NumberOfOrders</p>
                        <br />
                        <p>StartOfTour: @item.StartOfTour</p>
                        <br />
                        <p>EndOfTour: @item.EndOfTour</p>
                        <br />
                        <p>City: @item.City.NameCity</p>
                        <br />
                        <p>TypeOfTour: @item.TypeOfTour.Type</p>
                        <br />
                        @Html.ActionLink("Order Tour", "OrderTour", new { id = item.Id }, new { @class = "btn btn-success w-50 d-block mx-auto" })
                    </div>
                </div>
            }
        </div>
        <br />
        <div class="text-center">
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @Html.PageLinks(Model.PageInfo, x => Url.Action("TourСatalog", new { page = x }))
                </ul>
            </nav>
        </div>
    }
</div>


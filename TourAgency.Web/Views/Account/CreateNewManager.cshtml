@model TourAgency.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "CreateNewManager";
}
<div class="container">
    <br />
    <br />
    <div class="card">
        <div class="card-header">
            Create a new manager.
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CreateNewManager", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                @Html.Label("Manager Name", htmlAttributes: new { @class = "col-md-2 control-label" })
                @Html.TextBox("yourName", null, htmlAttributes: new { @class = "form-control" })
                @Html.Label("Manager Surname", htmlAttributes: new { @class = "col-md-2 control-label" })
                @Html.TextBox("yourSurname", null, htmlAttributes: new { @class = "form-control" })
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                <br />
                <input type="submit" class="btn btn-primary" value="Register" />
            }
        </div>
    </div>
</div>
